  <style>
    /* logo */
    .logo {
      width: 30%;
      display: flex;
      flex-direction: row;
      margin-left: 10%;
    }

    .logo img {
      width: 80px;
      height: 80px;
    }

    .logo .ctn-title-img {
      width: 60%;
      height: inherit;
      text-align: center;
    }

    .logo .ctn-title-img p {
      font-size: 17px;
      font-weight: lighter;
    }

    /* logo */


    /* carrusel */
    .carousel-inner {
      height: 70vh;
      display: flex;
    }

    .carousel-inner .carousel-item img {
      width: 80%;
      margin-left: 10%;
      height: 70vh;
      display: block;
    }

    /* carrusel */

    /* nav */

    .navbar-nav {
      width: 90%;
      font-size: 20px;
      justify-content: space-evenly;
    }

    .navbar-nav li {
      vertical-align: middle;
      -webkit-transform: perspective(1px) translateZ(0);
      transform: perspective(1px) translateZ(0);
      box-shadow: 0 0 1px rgba(0, 0, 0, 0);
      position: relative;
      overflow: hidden;
    }

    .navbar-nav li:before {
      position: absolute;
      z-index: -1;
      content: "";
      left: 51%;
      right: 51%;
      bottom: 0;
      background: #000000;
      height: 2px;
      -webkit-transition-property: left, right;
      transition-property: left, right;
      -webkit-transition-duration: 0.3s;
      transition-duration: 0.3s;
      -webkit-transition-timing-function: ease-out;
      transition-timing-function: ease-out;
    }

    .navbar-nav li:hover:before,
    .navbar-nav li:focus:before,
    .navbar-nav li:active:before {
      left: 0;
      right: 0;
    }



    /* redes */
    .collapse .ctn-redes {
      width: 30%;
      height: inherit;
      display: flex;
    }

    .ctn-redes a {
      margin: auto;
    }

    .ctn-redes a .img-redes {
      width: 2rem;
    }

    .ctn-redes a .img-redes:hover {
      transform: scale(0.9);
    }

    /* seccion card  y redes */
    /* nav */

    #footer-wrapper {
      color: white;
      /* Color del título */
      margin: 5px 10px;
      padding: 1px 0;
      text-align: center;
      font-size: 12px;
      /* Tamaño de la fuente del título */
    }

    .u-footer {
      background: #3c3c3c;
      /* Color de fondo de los gadgets */
      padding: 5px 5px;
      position: relative;


    }

    #col1 {
      font-family: 'Montserrat', sans-serif;
      font-size: 11px;
      margin: 0;
      padding: 20px;
      text-align: center;
    }

    #col2 {
      font-family: 'Montserrat', sans-serif;
      font-size: 11px;
      margin: 0;
      padding: 20px;
      text-align: center;
    }

    #col3 {
      font-family: 'Montserrat', sans-serif;
      font-size: 11px;
      margin: 0;
      padding: 20px;
      text-align: center;
    }

    #col4 {
